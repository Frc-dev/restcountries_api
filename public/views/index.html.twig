<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{{'Countries of the World' | trans}}</title>
        <meta name="description" content="A simple HTML5 Template for new projects.">
        <meta name="author" content="ass">
        <link href="{{ asset('styles/main.css') }}" rel="stylesheet"/>
    </head>
    <body>
        <div id="topnav">
            <div id="title">{{'Countries of the World' | trans}}</div>
        </div>

        {% if countryList is not empty %}{{ dump(countryList) }}
            <table id="countryTable">
                <tr>
                    <th>Flag</th>
                    <th>Name</th>
                    <th>Country code</th>
                    <th>Capital</th>
                    <th>Population</th>
                </tr>
                {% for country in countryList %}
                    <tr class="row-" ~ country.id>
                        <th>{{ country.flag }}</th>
                        <th>{{ country.name }}</th>
                        <th>{{ country.countryCode }}</th>
                        <th>{{ country.capital }}</th>
                        <th>{{ country.population }}</th>
                        <th>            
                            <button type="button" class="btn btn-primary edit-button" value={{ country.id }}>Edit</button>
                        </th>
                        <th>
                            <button type="button" class="btn btn-danger delete-button" value={{ country.id }}>Delete</button>
                        </th>
                    <tr>
                {% endfor %}
            </table> 
        {% endif %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="{{ asset('scripts/main.js') }}"></script>
    </body>
</html>